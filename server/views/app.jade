doctype html
html(lang=en)
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Linkmator (#{config.env})
    script(type="text/javascript" src="http://cdn.polyfill.io/v2/polyfill.min.js?features=fetch|gated")
    if config.env === 'production'
      link(rel="stylesheet" href="/static/#{assets.app.css}")
  body
    #app
    if config.env !== 'production'
      script(type="text/javascript" src="/static/bundle.vendor.js")
      script(type="text/javascript" src="/static/bundle.app.js")
    else
      script(type="text/javascript" src="/static/#{assets.vendor.js}")
      script(type="text/javascript" src="/static/#{assets.app.js}")
